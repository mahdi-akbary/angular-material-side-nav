@import "../styles/color-const.styl"
@import "../styles/measure-const.styl"
mat-drawer-container
  width 100%
  height 100%
  background-color #fff
  mat-drawer
    background-color sideNav
    width sideNavWidth
    transition: width 0.6s ease;
    //transition transform 400ms cubic-bezier(0.25, 0.8, 0.25, 1)
    .drawer-title
      position relative
      width sideNavWidth
      height 43px
      background-color #373c47
      color #fff
      left 0
      top 0
      z-index 2
      box-shadow -1px 1px 3px #030303
      padding 0
      display flex
      justify-content space-around
      align-items center
      transition: all 0.6s ease;
      .name
        width 67%
        .name-icon
          padding 3px 3px 2.5px 3px
          font-size 10px
          background-color #8bc34a
          border-radius 2px
          cursor pointer
        .name-text
          font-size 13px
          display inline
          margin-left 15px
      mat-icon
        cursor pointer
    .drawer-title-mini-state
      transform: translate3d(-80%, 0px, 0px) !important;
  .close-state
    width 5%
  .open-state
    font-size inherit
  ::ng-deep mat-drawer
    visibility visible !important
    transform unset !important
.mini-state
  width 0 !important
  height 0 !important
  overflow hidden

mat-selection-list
  background-color sideNav
  padding-top: 35px;
  ::ng-deep .mat-list-item-content,
  ::ng-deep .mat-list-text
    width 100%
    margin 0
    padding 0 !important
    flex-direction row !important
    align-items center
    height 35px
  mat-list-option
    cursor pointer
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #b7b7b7;
    font-size: 12px;
    height 35px
    .option-text
      display flex
      align-items center
      width: 100%;
      transition: padding 0.6s ease;
      span
        white-space: nowrap;
        overflow: hidden;
        padding-left 15px
      .option-icon
        padding-left 15px
        font-size  17px
        display flex
        justify-content center
        align-items center
    .icon-status
      font-size 17px
      display flex
      align-items center
      padding-right 15px
  .child-option
    background-color #30353e
    transition all 1.5s ease;
    max-height 0
    min-height 0
    overflow hidden
    .padding-left
      transition: padding 0.6s ease;
      padding-left 20px
  .expand
    max-height 1000px
    transition all 1.5s ease;
  .selected
    background-color #30353e


