@import "../../styles/color-const.styl"
@import "../../styles/measure-const.styl"
mat-drawer-container
  width 100%
  height 100%
  background-color #fff
  mat-drawer
    background-color sideNav
    width sideNavWidth
    transition: width 0.6s ease;
    .drawer-title
      position relative
      width sideNavWidth
      height 43px
      background-color #373c47
      color #fff
      left 0
      top 0
      z-index 2
      box-shadow -1px 1px 3px #030303
      padding 0
      display flex
      justify-content space-around
      align-items center
      transition: all 0.6s ease;
      .name
        width 67%
        .name-icon
          padding 3px 3px 2.5px 3px
          font-size 10px
          background-color #8bc34a
          border-radius 2px
          cursor pointer
        .name-text
          font-size 13px
          display inline
          margin-left 15px
      mat-icon
        cursor pointer
    .drawer-title-mini-state
      transform: translate3d(-80%, 0px, 0px) !important;
  .close-state
    width 5%
  .open-state
    font-size inherit
  ::ng-deep mat-drawer
    visibility visible !important
    transform unset !important

.mini-state
  width 0 !important
  height 0 !important
  overflow hidden
mat-drawer-content
  margin-left 250px !important
.margin-left-5
  margin-left 5% !important
